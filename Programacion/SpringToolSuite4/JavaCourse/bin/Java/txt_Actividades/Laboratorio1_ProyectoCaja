		
package Java;
import java.util.Scanner;

public class main {

public static void main(String[] args) {
		int altura;
		int profundidad;
		int anchura;
		Scanner sc=new Scanner(System.in);

		caja caja= new caja(2,6,3);
		
		System.out.println("La profundidad es de: "+caja.getProfundo());
		System.out.println("El alto es de: "+caja.getAlto());
		System.out.println("El ancho es de: "+caja.getAncho());
		System.out.println("El volumen total es de: "+caja.getVolumen());
				
		
		System.out.println("Desea ingresar nuevos valores para la operacion?");
		String valor=sc.nextLine();

		if(valor.equals("si")) {
			System.out.println("Ingrese la profundidad");
			profundidad=sc.nextInt();
			System.out.println("Ingrese la altura");
			altura=sc.nextInt();
			System.out.println("Ingrese la anchura");
			anchura=sc.nextInt();
			
			caja.setAlto(altura);
			caja.setAncho(anchura);
			caja.setProfundo(profundidad);
			
			System.out.println("La profundidad es de: "+caja.getProfundo());
			System.out.println("El alto es de: "+caja.getAlto());
			System.out.println("El ancho es de: "+caja.getAncho());
			System.out.println("El volumen total es de: "+caja.getVolumen());
		}
		else {
			System.out.println("Gracias por probar");
		}
		
    }
}